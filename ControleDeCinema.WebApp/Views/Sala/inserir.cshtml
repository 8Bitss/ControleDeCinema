@{
    Layout = "_Layout";
    ViewBag.Title = "Cadastrar Sala";
}

<div class="row mt-3">
    <div class="col-lg-6">
        <form class="d-grid gap-4" action="/sala/inserir" method="post">

            <div class="mt-2">
                <label class="control-label fw-semibold">Capacidade:</label>
                <input class="form-control" type="number" name="capacidade" />
            </div>

            <div class="mt-2 d-grid gap-2 d-md-block">
                <button class="btn btn-primary px-5">
                    <i class="bi bi-floppy-fill me-1"></i>
                    Gravar
                </button>

                <a class="btn btn-secondary px-5" href="/sala/listar">
                    <i class="bi bi-arrow-return-left me-1"></i>
                    Voltar
                </a>

            </div>
        </form>

    </div>
</div>