@{
    var f = ViewBag.Filme;

    Layout = "_Layout";
    ViewBag.Title = "Visualizar Detalhes de Filme";
}

<div class="row mt-3">
    <div class="col-lg-6 d-grid gap-2 d-md-block">

        <div class="d-grid">
            <label><strong>Id:</strong> [@f.Id]</label>
            <label class="fs-5"><strong>Filme:</strong>@f.Titulo</label>
            <label><strong>Duração:</strong> @f.Duracao</label>
            <label><strong>Data de Lançamento:</strong> @f.DataLancamento</label>
            <label><strong>Genero:</strong> @f.Genero</label>
        </div>

        <a href="/filme/listar" class="btn btn-secondary px-5 mt-4">
            <i class="bi bi-arrow-return-left me-1"></i>
            Voltar
        </a>
    </div>
</div>